{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
    "debug": true,
    "hideColumnHeader": true,
    "hideSelection": true,
    "rowFormatter": {
      "elmType": "div",
      "_comment": "top div 1",
      "style": {
        "display": "flex",
        "flex-wrap": "wrap",
        "align-items": "stretch",
        "flex-direction": "row",
        "padding": "20px",
        "margin-bottom": "16px",
        "border-radius": "5px",
        "-webkit-box-shadow": "10px 10px 28px -8px rgba(179,177,179,1)",
        "-moz-box-shadow": "10px 10px 28px -8px rgba(179,177,179,1)",
        "box-shadow": "10px 10px 28px -8px rgba(179,177,179,1)",
        "background-color": "#FAF8F9",
        "border-left": "3px solid #d3d3d3",
        
        "border-color": "=if([$Priority]=='High','green','red'"
      },
      "attributes": {
        "class": ""
      },
      "children": [
        {
          "elmType": "div",
          "_comment": "div 1.1",
          "style": {
            "flex-grow": "1",
            "display": "flex",
            "flex-direction": "column",
            "flex-wrap": "nowrap",
            "align-items": "stretch",
            "border-right": "1px solid #d3d3d3",
            
            "padding": "5px"
            
          },
          "children": [
            {
              "elmType": "span",
              "style": {},
              "attributes": {
                "class": "ms-fontSize-l ms-fontWeight-semibold ms-fontColor-neutralPrimary"
              },
              "txtContent": "='Full Name: ' + [$Title]"
            },
            {
              "elmType": "span",
              "txtContent": "='Description: ' + [$Description]"
            },
            {
              "elmType": "span",
              "txtContent": "Address: somewhere is paradise "
            },
            {
              "elmType": "span",
              "txtContent": "Telelphone # 000000333"
            },
            {
              "elmType": "button",
              "customRowAction": {
                "action": "defaultClick"
              },
              "txtContent": "Details",
              "attributes": {
                "class": "sp-row-button"
              },
              "style":{
                  "min-width": "50px"
              }
            }
          ]
        },
        {
          "elmType": "div",
          "_comment": "div 1.2",
          "style": {
            "flex-grow": "1",
            "display": "flex",
            "flex-direction": "column",
            "flex-wrap": "nowrap",
            "align-items": "left",
            "padding-left": "8px",
            "border-right": "1px solid #d3d3d3"
           
          },
          "children": [
            {
              "elmType": "span",
              "style": {},
              "attributes": {
                "class": ""
              },
              "txtContent": "='Full Name: ' + [$Title]"
            },
            {
              "elmType": "span",
              "txtContent": "='Description: ' + [$Description]"
            },
            {
              "elmType": "span",
              "txtContent": "Address: somewhere is paradise "
            },
            {
              "elmType": "span",
              "txtContent": "Telelphone # 000000333"
            }
          ]
        },
        {
          "elmType": "div",
          "_comment": "div 1.3",
          "style": {
            "flex-grow": "1",
            "display": "flex",
            "flex-direction": "column",
            "align-items": "left",
            "padding-left": "5px",
            "border-right": "1px solid #d3d3d3"

          },
          "children": [
            {
              "elmType": "span",
              "style": {},
              "attributes": {
                "class": ""
              },
              "txtContent": "='Full Name: ' + [$Title]"
            },
            {
              "elmType": "span",
              "txtContent": "='Description: ' + [$Description]"
            },
            {
              "elmType": "span",
              "txtContent": "Address: somewhere is paradise "
            },
            {
              "elmType": "span",
              "txtContent": "Telelphone # 000000333"
            }
          ]
        },
        {
          "elmType": "button",
          "customRowAction": {
            "action": "editProps"
          },
          "attributes": {
            "title": "Edit",
            "class": "ms-fontColor-neutralPrimary ms-fontColor-red--hover"
          },
          "style": {
            "border": "none",
            "background-color": "transparent",
            "cursor": "pointer",
            "font-size": "15px"
          },
          "children": [
            {
              "elmType": "span",
              "attributes": {
                "iconName": "Edit"
              }
            }
          ]
        },
        {
          "elmType": "button",
          "customRowAction": {
            "action": "delete"
          },
          "attributes": {
            "title": "Delete",
            "class": "ms-fontColor-neutralPrimary ms-fontColor-red--hover"
          },
          "style": {
            "border": "none",
            "background-color": "transparent",
            "cursor": "pointer",
            "font-size": "15px"
          },
          "children": [
            {
              "elmType": "span",
              "attributes": {
                "iconName": "Delete"
              }
            }
          ]
        },
        {
          "elmType": "button",
          "customRowAction": {
            "action": "defaultClick"
          },
          "attributes": {
            "title": "See more details",
            "class": "ms-fontColor-neutralPrimary ms-fontColor-red--hover"
          },
          "style": {
            "border": "none",
            "background-color": "transparent",
            "cursor": "pointer",
            "font-size": "15px"
          },
          "children": [
            {
              "elmType": "span",
              "attributes": {
                "iconName": "ContactInfo"
              }
            }
          ]
        }
      ]
    }
  }